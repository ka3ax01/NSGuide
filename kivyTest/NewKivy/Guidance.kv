<PhotoWindow@widget>:
    name: "photo"
    canvas.before:
        Rectangle:
            source: "dsn/background.JPG"
            pos: self.pos
            size: self.size
    
    MDBoxLayout:
        orientation: "vertical"
        
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
           
        ToggleButton:
            text: 'Play'
            on_press: camera.play = not camera.play
            size_hint_y: None
            height: '48dp'
            
            background_color: "#6495ED"
            background_normal: ""
            size_hint: (0.8, 0.5)
            pos_hint : {"x": .1}
            bold: True
            border_color: "black"
            border_size: 5
            
        Button:
            text: 'Capture'
            background_color: "#6495ED"
            background_normal: ""
            size_hint: (0.8, 0.5)
            pos_hint : {"x": .1}
            bold: True
            border_color: "white"
            border_size: 5
            size_hint_y: None
            height: '48dp'
            on_press: root.capture()
            on_release:
                app.root.current = "photoconf"
                root.manager.transition.direction = "right"
            
       
                
        Button:
            text: "back"
            background_color: "#6495ED"
            background_normal: ""
            size_hint: (0.8, 0.5)
            pos_hint : {"x": .1}
            bold: True
            border_color: "white"
            border_size: 5
            
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
                
