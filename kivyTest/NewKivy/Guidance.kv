<MainWindow@widget>:
    name: "main"
    canvas.before:
        Rectangle:
            source: "dsn/background.JPG"
            pos: self.pos
            size: self.size
            
    MDBoxLayout:
        orientation: "vertical"

        Button:
            text: "LANGUAGE"
            size_hint : .2, .2
            pos_hint : {"x": .8}
            background_color: "#6495ED"
            background_normal: ""
            bold: True
            #font_size : 18
            #border: (10,16,16,10)
            on_release:
                app.root.current = "language"
                root.manager.transition.direction = "left"

        #MDLabel:
        #    halign: "center"
        #    text: "NS TOURIST GUIDE APP"
        
        Image:
            source: "dsn/logo4.png"
            halign: "center"
            
        Image:
            source: "dsn/howinfo2.png"
            halign: "center"

        #MDLabel:
        #    halign: "center"
        #    text: "HOW DO YOU WANNA FIND INFO?"
            
        

        Button:
            text: "PHOTO"
            background_color: "#6495ED"
            background_normal: ""
            size_hint: (0.8, 0.5)
            pos_hint : {"x": .1}
            bold: True
            border: (10,16,16,10)
            #spacing: 100
            #padding: 10, 10spacing: 100
            
            
            on_release:
                app.root.current = "photo"
                root.manager.transition.direction = "left"
                
        Button:
            text: "TEXT"
            
            background_color: "#6495ED"
            background_normal: ""
            size_hint: (0.8, 0.5)
            pos_hint : {"x": .1}
            bold: True
            border_color: "black"
            border_size: 2
            #spacing: 100
            #padding: 10, 10
            
            on_release:
                app.root.current = "text"
                root.manager.transition.direction = "right"
            
